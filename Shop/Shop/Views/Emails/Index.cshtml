@model Shop.Models.EmailIndexViewModel;

<div class="container">
    <h1>Send email</h1>
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label asp-for="To" style="font-family: Arial">To</label>
                <input asp-for="To" class="form-control" />
            </div>
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label asp-for="Subject" style="font-family: Arial">Subject</label>
                <input asp-for="Subject" class="form-control" />
            </div>
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label asp-for="Body" style="font-family: Arial">Body</label>
                <input asp-for="Body" class="form-control" />
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Emails" asp-action="SendEmail" class="button special small">Send email</button>
            </div>
        </div>
    </form>
</div>
